<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contas a pagar:"
        android:textSize="30sp" />

    <CheckBox
        android:id="@+id/checkAgua"
        style="@style/CheckboxStyle"
        android:tag="100"
        android:text="Água (R$ 100,00)" />

    <CheckBox
        android:id="@+id/checkLuz"
        style="@style/CheckboxStyle"
        android:tag="150"
        android:text="Luz (R$ 150,00)" />

    <CheckBox
        android:id="@+id/checkTelefone"
        style="@style/CheckboxStyle"
        android:tag="200"
        android:text="Telefone (R$ 200,00)" />

    <CheckBox
        android:id="@+id/checkCelular"
        style="@style/CheckboxStyle"
        android:tag="50"
        android:text="Celular (R$ 50,00)" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botaoPagar"
            style="@style/ButtonStyle"
            android:layout_weight="3"
            android:text="Pagar" />

        <Button
            android:id="@+id/button2"
            style="@style/ButtonStyle"
            android:layout_weight="2"
            android:text="Cancelar" />
    </LinearLayout>

</LinearLayout>